<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/fondo_cine2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menú"
            android:textColor="#B315CD"
            android:textSize="40dp"
            android:background="#F8F2DC"
            android:layout_marginTop="30dp" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:background="#F8F2DC"
            android:textStyle="bold"
            android:text="Según tu edad, tienes acceso a los siguientes videos"
            android:textSize="20dp"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caricaturas"
                android:textSize="20dp"
                android:textColor="#E10D1F"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:id="@+id/C1"
                    android:src="@drawable/empatia_video"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="20dp"/>
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:id="@+id/C2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/videoparcialmentenublado"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginRight="20dp"
                    android:text="Ratón en venta"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Parcialmente nublado"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/L1"
            android:visibility="invisible"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acción"
                android:textSize="20dp"
                android:textColor="#E10D1F"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:id="@+id/A1"
                    android:src="@drawable/videolevantado"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="20dp"/>
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:id="@+id/A2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/videoencriptado"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginRight="20dp"
                    android:text="Levantado"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Encriptado"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/L2"
            android:orientation="vertical"
            android:visibility="invisible"
            android:gravity="center"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terror"
                android:textSize="20dp"
                android:textColor="#E10D1F"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:id="@+id/T1"
                    android:src="@drawable/videomissinghalloween"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="20dp"/>
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:id="@+id/T2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dollmaker_video"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginRight="20dp"
                    android:background="#F8F2DC"
                    android:text="Missing Halloween"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:background="#F8F2DC"
                    android:text="El creador de muñecos"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Regreso"
            android:layout_marginTop="10dp"
            android:text="Registrar otro usuario"/>

    </LinearLayout>

</RelativeLayout>